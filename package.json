{
  "name": "skeletos",
  "version": "1.0.0",
  "description": "Skeletos is an in-memory state management framework.",
  "repository": "https://github.com/pythian/skeletos",
  "author": "Pythian and Atif Ali",
  "license": "MIT",
  "dependencies": {
    "async": "^2.0.0",
    "bluebird": "^3.0.0",
    "lodash": "^4.0.0",
    "react": "^15.0.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.0",
    "@types/bluebird": "^3.0.0",
    "@types/lodash": "^4.0.0",
    "@types/node": "^8.5.5",
    "@types/react": "^15.0.0",
    "hammerpack": "^0.0.1",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "build": "npm run build-core && npm run build-web",
    "publish": "npm run publish-core && npm run publish-web",
    "build-core": "node node_modules/hammerpack/dist/main.js --conf src/core/core.hammerpack.yaml",
    "build-web": "node node_modules/hammerpack/dist/main.js --conf src/web/web.hammerpack.yaml",
    "publish-core": "npm publish .hammerpack/skeletos/dist/dist",
    "publish-web": "npm publish .hammerpack/skeletos-web/dist/dist"
  }
}
